year <- sub("-.*", "", meta$Date)
note <- sprintf("{R} package version %s", meta$Version)

citEntry(
  entry = "Misc",
  title = "{band}: Banded Matrices",
  author = person("Drew", "Schmidt"),
  year = year,
  note = note,
  url = "https://cran.r-project.org/package=band",
  textVersion = NULL,
  key = "band"
)

citEntry(
  entry = "Manual",
  title = "Introducing {band}: Banded Matrices for R",
  author = person("Drew", "Schmidt"),
  year = year,
  note = "{R} Vignette",
  url = "https://cran.r-project.org/package=band",
  textVersion = NULL,
  key = "bandguide"
)
